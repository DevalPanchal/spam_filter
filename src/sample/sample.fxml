<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button fx:id="trainDataBtn" id="trainDataBtn" onAction="#TrainData" GridPane.rowIndex="1" GridPane.columnIndex="1" text="Select Training Path"></Button>
    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <columns>
            <TableColumn fx:id="fileColumn" text="File"></TableColumn>
            <TableColumn fx:id="actualClassColumn" text="Actual Class"></TableColumn>
            <TableColumn fx:id="spamProbabilityColumn" text="Spam Probability"></TableColumn>
        </columns>
    </TableView>
</GridPane>